#!/usr/bin/env bash
# Run seperately configured polybars on each monitor (mainbar and secondbar)

# Terminate already running bar instances
killall -q polybar

# Wait until the processes have been shut down
while pgrep -x polybar >/dev/null; do sleep 1; done

SCREENS=$(xrandr --listactivemonitors | grep -v "Monitors" | cut -d" " -f6)

if [[ $(xrandr --listactivemonitors | grep -v "Monitors" | cut -d" " -f4 | cut -d"+" -f2- | uniq | wc -l) == 1 ]]; then
  MONITOR=$(polybar --list-monitors | cut -d":" -f1) TRAY_POS=right polybar mainbar &
else
  primary=$(xrandr --query | grep primary | cut -d" " -f1)

  for m in $SCREENS; do
    echo "$primary : $m"
    if [[ $primary == $m ]]; then
        MONITOR=$m TRAY_POS=none polybar mainbar &
    else
        MONITOR=$m TRAY_POS=right polybar secondbar &
    fi
  done
fi
